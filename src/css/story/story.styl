
header
  background none

header.is-sticky
  background #f7f7f7
  position relative
  box-shadow none
  .intro__byline
    position absolute
    top 1rem
    left 1rem
    padding 0rem
    margin 0rem
    color #706677
    font-size 13px
    line-height .9
    a
      color #706677
      border-bottom 1px solid #706677
      font-size 13px
  .logo
    svg
      fill rgba(90, 78, 82, 0.58)

body
  background #f7f7f7
  height auto
  overflow-x hidden
  .pudding-footer
    background #f7f7f7


.prose-container
  max-width 530px
  width 95%
  margin 0 auto
  p
    color #5a4e52
    font-family 'Atlas Grotesk Web'
    font-weight 400

.intro
  background linear-gradient(#f7f7f7 87%, #ffffff00 100%)
  margin-bottom -100px
  z-index 100
  position relative
  padding-bottom 100px
  .intro-text
    max-width 530px
    width 95%
    margin 0 auto
    p
      color #5a4e52
      font-family 'Atlas Grotesk Web'
      font-weight 400
  .intro__hed
    color #772521
    font-size 80px
    margin-bottom 30px
.scroll
  position relative
  display flex
  margin-bottom 500px
  .scroll__text
    position relative
    z-index 10
    width 100%
    .step
      height 600px
      &:first-of-type
        margin-top 300px
      p
        background white
        margin 0 auto
        //position absolute
        z-index 1000
        width 300px
        font-size 14px
        text-align center
        padding 10px 10px
        //top 50%
        //left 50%
        //transform translate(-100%,0%)
        border-radius 5px
        box-shadow 0px 3px 3px 1px rgba(0, 0, 0, 0.11)
        font-family 'Atlas Grotesk Web'
        border 1px solid #d0cccc
        .red
          background rgba(243, 156, 105, 0.658)
          padding 0 5px
          font-weight 500
  .scroll__graphic
    position absolute
    top 0px
    width 100%
    left 0px
    z-index 0
    #map
      height 100vh
      width 100%

.image-wrapper
  //width 100%
  //display flex
  //flex-wrap wrap
  height auto
  margin-top 5rem
  .single-year-wrapper
    display flex
    flex-wrap wrap
    justify-content space-between
    width 100%
    margin 0 auto
    .img-wrapper
      padding-bottom 50px
      position relative
      width 100%
      .text-column
        width calc(2.5% + 160px)
        position absolute
        z-index 1000
        height 100%
        background #f7f7f7
        margin-left 2.5%
        padding-right 20px
        .city-toggles
          display flex
          .city-toggle
            background white
            border 1px solid #aaa
            margin-left -1px
            cursor hand
            cursor pointer
            &:first-of-type
              border-top-left-radius 5px
              border-bottom-left-radius 5px
            &:last-of-type
              border-top-right-radius 5px
              border-bottom-right-radius 5px
            .city-toggle-text
              font-family 'Atlas Grotesk Web'
              font-size 13px
              line-height 1.5
              padding 3px 7px
              margin 0px
              text-transform capitalize

          .city-toggle-active
            box-shadow inset 0 3px 5px rgba(0,0,0,.125)
            background #F5F5F5
            font-weight 500

        .city-name
          font-family 'Atlas Grotesk Web'
          text-align left
          font-size 24px
          font-weight 300
          margin 0px
          color #333
          width 100%
          font-weight 300
          line-height 1.4
        .city-desc
          font-size 12px
          color #667177
          font-family 'Atlas Grotesk Web'
      .swiper-container
        width calc(97.5% - 180px)
        margin-left 200px
        height 100%
        .swiper-pagination
          bottom 0px
          background #f7f7f7
          span
            width 12px
            height 12px
        img
          display block

  .years-wrapper
    display flex
    width 100%
    justify-content space-between
    margin-bottom 1.2rem
    img
      //width 100%
      display block
      width auto


.mapboxgl-ctrl.mapboxgl-ctrl-attrib
  background-color #F7F7F7

.mapboxgl-ctrl
  a
    border none
  &:after
    display none
