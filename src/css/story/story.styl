/* CUSTOM STORY STYLE */

header
  background none

header.is-sticky
  background #f7f7f7
  position relative
  box-shadow none
  .intro__byline
    position absolute
    top 1rem
    left 1rem
    padding 0rem
    margin 0rem
    color #667177
    font-size 13px
    line-height .9
    a
      color #667177
      border-bottom 1px solid #667177
      font-size 13px
  .logo
    svg
      fill #A1AFB7

body
  background #f7f7f7
  .pudding-footer
    background #f7f7f7

.intro
  background linear-gradient(#f7f7f7 77%, #ffffff00 100%)
  margin-bottom -100px
  z-index 100
  position relative
  padding-bottom 100px
  .intro-text
    width 530px
    margin 0 auto
    p
      color #667177
      font-family 'Atlas Grotesk Web'
      font-weight 400
  .intro__hed
    color #174B48
    font-size 80px
    margin-bottom 30px

.image-wrapper
  //width 100%
  //display flex
  //flex-wrap wrap
  height auto
  .single-year-wrapper
    display flex
    flex-wrap wrap
    justify-content space-between
    img
      display block
      width auto
  .years-wrapper
    display flex
    width 100%
    justify-content space-between
    margin-bottom 1.2rem
    img
      //width 100%
      display block
      width auto
