          font-family 'Atlas Grotesk Web'
          span
            font-weight 500

      .swiper-container
        //width calc(97.5% - 180px)
        //margin-left 200px
        width 90%
        max-width 920px
        position relative
        overflow visible
        &:before
          position absolute
          content ''
          height 40px
          left 0px
          right auto
          bottom 0px
          width 200%
          //width calc((100vw - 920px)/2)
          transform translate(-33%,0)
          background #F7F7F7
          z-index 10
        &:after
          position absolute
          content ''
          height calc(100% - 30px)
          right 0px
          top 0px
          width calc((100vw - 920px)/2)
          transform translate(calc(100%+20px),0)
          background linear-gradient(90deg, rgba(247, 247, 247, 0) 0%, #F7F7F7 100%)
          z-index 1000
        .swiper-wrapper
          .swiper-slide
            position relative
            &:after
              position absolute
              content 'Size scale: 1:4M'
              top calc(100% - 40px)
              left 0px
              background white
              z-index 100
              transform translate(0,-100%)
              width 100px
              margin 0
              padding-bottom 2px
              font-size 11px
              line-height 2
              font-family 'Atlas Grotesk Web'
              text-align center
            &:before
              position absolute
              content 'Loading...'
              top 50%
              left 0px
              right 0px
              margin 0 auto
              text-align center
              transform translate(0,calc(50% - 30px))
              font-family 'Atlas Grotesk Web'
              font-weight 400
              z-index 0
            img
              display block
              position relative
              z-index 100
            .globe-wrapper
              position absolute
              bottom 40px
              z-index 1000
              right 10px
              //opacity .5
              .globe-wrapper-svg-container
                position absolute
                width 20px
                svg
                  transform translate(-50%,-100%)
                  path
                    fill #d84846
            .mask-div
              background #F7F7F7
              position absolute
              z-index 1000
              bottom  0px
              left 0px
              height 30px
              width 100%
            .overlay-div
              position absolute
              z-index 10000
              width 100%
              height 100%
              svg
                width 100%
                height 100%
                path
                  stroke-width 1.5px
                text
                  tspan
                    font-size 14px
                    font-weight 400
                    font-family 'Atlas Grotesk Web'
            .city-title
              position absolute
              top 0px
              left 0px
              font-family 'Atlas Grotesk Web'
              transform translate(0,calc(-100% - 5px))
              margin 0px
              right 0px
              margin 0 auto
              text-align center
              font-size 16px
              font-weight 500
              span
                font-size 14px
                font-weight 400
                margin-left 10px
            .border-div
              position absolute
              top 0px
              left 0px
              display block
              left 0px
              right 0px
              margin 0 auto
              top 50%
              z-index 1000
              border 3px solid rgba(0, 0, 0, 0.55)
              transform translate(0,-50%)
            &:first-of-type
              .border-div
                border 2px solid #9A9898
                top 0px
                left 0px
                transform none
            &:nth-of-type(2)
              &:after
                content 'Size scale: 1:10M'

            &:nth-of-type(3)
              &:after
                content 'Size scale: 1:15M'

            &:nth-of-type(4)
              &:after
                content 'Size scale: 1:35M'
            &:nth-of-type(5)
              &:after
                content 'Size scale: 1:70M'
            &:nth-of-type(3), &:nth-of-type(4), &:nth-of-type(5)
              .border-div
                opacity .7
                border 1.5px solid rgba(0, 0, 0, 0.55)
        .fraction
          position absolute
          top 15px
          right 15px
          z-index 100
          font-family 'Atlas Grotesk Web'
          background rgba(0,0,0,.7)
          font-size 12px
          font-weight 600
          padding 0 5px
          margin 0px
          color white
          border-radius 5px
        .city-toggles
          display flex
          position absolute
          bottom 0px
          z-index 100
          margin-left 2px
          .city-toggle
            background white
            border 1px solid #c7c7c7
            margin-left -1px
            cursor hand
            cursor pointer
            &:first-of-type
              border-top-left-radius 5px
              border-bottom-left-radius 5px
            &:last-of-type
              border-top-right-radius 5px
              border-bottom-right-radius 5px
            .city-toggle-text
              font-family 'Atlas Grotesk Web'
              font-size 13px
              line-height 1.5
              padding 3px 7px
              margin 0px
              text-transform capitalize
          .city-toggle-active
            box-shadow inset 0 3px 5px rgba(0,0,0,.125)
            background #F5F5F5
            font-weight 500
        .swiper-pagination
          bottom 0px
          height 40px
          padding-top 18px
          position absolute
          background #f7f7f7
          span
            width 11px
            height 11px


