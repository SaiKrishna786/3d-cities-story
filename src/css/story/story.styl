      height 600px
      &:first-of-type
        margin-top 300px
      &:last-of-type
        height 400px
      p
        background white
        margin 0 auto
        //position absolute
        z-index 1000
        width 300px
        font-size 14px
        text-align center
        padding 10px 10px
        //top 50%
        //left 50%
        //transform translate(-100%,0%)
