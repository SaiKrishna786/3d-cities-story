header
  background none

header.is-sticky
  background #f7f7f7
  position relative
  box-shadow none
  .intro__byline
    position absolute
    top 1rem
    left 1rem
    padding 0rem
    margin 0rem
    color #706677
    font-size 13px
    line-height .9
